name: CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  quality:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4
    - name: Check for trailing whitespace
      run: if grep -r '[[:space:]]$'; then exit 1; fi
    - name: Validate YAML files
      run: find . -name "*.yml" -o -name "*.yaml" | xargs -I {} yamllint {}
      continue-on-error: true
